<!DOCTYPE html>
<html>
<head>
    <title>Your shortened URL | Open source link shortener</title>
    {{> common/head}}
    <script>
        const shortUrl = `{{url}}`;

        function onCopy(e) {
            navigator.clipboard.writeText(shortUrl);
            M.toast({html: 'Copied to clipboard!'})
        }
    </script>
</head>

<body>
<header>
    <div class="col s12"><h1 style="text-align: center;margin-bottom: 52px">Your shortened URL</h1></div>
</header>
<main>
    <div class="container">
        <input disabled value="{{url}}" id="url" type="text" class="validate"/>
        <button onclick="onCopy()" class="waves-effect waves-light btn">
            Copy to clipboard
        </button>
    </div>
</main>
{{> common/footer }}
</div>

<!--JavaScript at end of body for optimized loading-->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>
</html>
